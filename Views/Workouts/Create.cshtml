@model FitnessTracker.Models.WorkoutsModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WorkoutsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaloriesBurned" class="control-label"></label>
                <input asp-for="CaloriesBurned" class="form-control" />
                <span asp-validation-for="CaloriesBurned" class="text-danger"></span>
            </div>
            <input type="hidden" name="FitnessUserId" value="@ViewBag.CurrentUserId" />


            <hr />
            <h4>VitalsModel</h4>
            <div class="form-group">
                <label for="SystolicBP">Systolic BP:</label>
                <input type="text" class="form-control" id="SystolicBP" name="Vitals.SystolicBP" value="@Model.Vitals?.SystolicBP" />
            </div>
            <div class="form-group">
                <label for="DiastolicBP">Diastolic BP:</label>
                <input type="text" class="form-control" id="DiastolicBP" name="Vitals.DiastolicBP" value="@Model.Vitals?.DiastolicBP" />
            </div>
            <div class="form-group">
                <label for="HeartRate">Heart Rate:</label>
                <input type="number" min="1" max="500" class="form-control" id="HeartRate" name="Vitals.HeartRate" value="@Model.Vitals?.HeartRate" />
            </div>
            <div class="form-group">
                <label for="OxygenSaturation">Oxygen Saturation:</label>
                <input type="number" min="1" max="100" class="form-control" id="OxygenSaturation" name="Vitals.OxygenSaturation" value="@Model.Vitals?.OxygenSaturation" />
            </div>
            <input type="hidden" name="Vitals.FitnessUserId" value="@ViewBag.CurrentUserId" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
